; Test using SIDESET instead of OUT - just output one byte
; SIDESET pin = data signal
; SET pin = frame signal

.program test_sideset
.side_set 1

.wrap_target
    set pins, 1         side 0  ; Frame HIGH, data 0
    pull block          side 0  ; Get byte from FIFO

    ; Manually shift out 8 bits using sideset
    out x, 1            side 0  ; Shift bit to X
    nop                 side 0 [0]  ; Output bit 0 (in X)
    out x, 1            side 0
    nop                 side 1 [0]  ; Output bit 1
    out x, 1            side 0
    nop                 side 0 [0]  ; Output bit 2
    out x, 1            side 0
    nop                 side 1 [0]  ; Output bit 3
    out x, 1            side 0
    nop                 side 0 [0]  ; Output bit 4
    out x, 1            side 0
    nop                 side 1 [0]  ; Output bit 5
    out x, 1            side 0
    nop                 side 0 [0]  ; Output bit 6
    out x, 1            side 0
    nop                 side 1 [0]  ; Output bit 7

    set pins, 0         side 0 [3]  ; Frame LOW
.wrap

% c-sdk {
static inline void test_sideset_program_init(PIO pio, uint sm, uint offset, uint data_pin, uint frame_pin, float clk_div) {
    pio_sm_config c = test_sideset_program_get_default_config(offset);

    sm_config_set_sideset_pins(&c, data_pin);
    sm_config_set_set_pins(&c, frame_pin, 1);
    sm_config_set_out_shift(&c, true, false, 32);  // LSB first
    sm_config_set_clkdiv(&c, clk_div);

    pio_sm_init(pio, sm, offset, &c);

    pio_gpio_init(pio, data_pin);
    pio_sm_set_consecutive_pindirs(pio, sm, data_pin, 1, true);

    pio_gpio_init(pio, frame_pin);
    pio_sm_set_consecutive_pindirs(pio, sm, frame_pin, 1, true);

    pio_sm_set_enabled(pio, sm, true);
}
%}
